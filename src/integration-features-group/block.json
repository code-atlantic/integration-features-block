{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "popup-maker/integration-features-group",
  "version": "1.0.0",
  "title": "Integration Features Group",
  "category": "layout",
  "icon": "admin-plugins",
  "description": "Display a group of integration features with icon, heading, and accordion list.",
  "keywords": [
    "integration",
    "features",
    "group",
    "accordion",
    "list"
  ],
  "textdomain": "popup-maker",
  "attributes": {
    "groupIcon": {
      "type": "string",
      "default": "admin-plugins"
    },
    "groupIconColor": {
      "type": "string",
      "default": "#1e1e1e"
    },
    "groupIconBackgroundColor": {
      "type": "string",
      "default": ""
    },
    "heading": {
      "type": "string",
      "default": ""
    },
    "headingTag": {
      "type": "string",
      "enum": ["h2", "h3"],
      "default": "h2"
    },
    "subheading": {
      "type": "string",
      "default": ""
    },
    "iconAnimation": {
      "type": "string",
      "enum": ["rotate-45", "rotate-180"],
      "default": "rotate-45"
    },
    "oneOpenPerGroup": {
      "type": "boolean",
      "default": true
    },
    "defaultOpen": {
      "type": "boolean",
      "default": false
    },
    "groupCollapsible": {
      "type": "boolean",
      "default": false
    },
    "groupCollapsed": {
      "type": "boolean",
      "default": true
    },
    "hasFeatures": {
      "type": "boolean",
      "default": false
    },
    "showFeatureCount": {
      "type": "boolean",
      "default": false
    },
    "featureCount": {
      "type": "number",
      "default": 0
    },
    "headerBackgroundColor": {
      "type": "string",
      "default": ""
    },
    "headingColor": {
      "type": "string",
      "default": ""
    },
    "subheadingColor": {
      "type": "string",
      "default": ""
    }
  },
  "supports": {
    "html": false,
    "anchor": true,
    "align": ["wide", "full"],
    "className": true,
    "customClassName": true,
    "spacing": {
      "margin": true,
      "padding": true,
      "blockGap": true
    },
    "interactivity": true,
    "color": {
      "background": true,
      "text": true,
      "link": false
    },
    "__experimentalBorder": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    },
    "typography": {
      "fontSize": true,
      "lineHeight": true
    }
  },
  "providesContext": {
    "popup-maker/groupIcon": "groupIcon",
    "popup-maker/iconAnimation": "iconAnimation",
    "popup-maker/groupId": "clientId",
    "popup-maker/oneOpenPerGroup": "oneOpenPerGroup"
  },
  "editorScript": "file:./index.js",
  "editorStyle": ["wp-dashicons", "file:./index.css"],
  "style": "file:./style-index.css",
  "viewScriptModule": "file:./view.js",
  "viewStyle": ["wp-dashicons", "file:./style-index.css"]
}
